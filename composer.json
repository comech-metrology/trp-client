{
  "name": "comech/trp-api-client",
  "description": "Simple PHP client library for the TrackRecordPro API.",
  "license": "Apache-2.0",
  "type": "library",
  "keywords" : ["api", "trackrecord", "trackrecordpro"],
  "authors": [
    {
      "name": "Craig Edwards",
      "email": "craig.edwards@comech.co.uk",
      "homepage" : "http://www.trackrecordpro.co.uk",
      "role" : "developer"
    }
  ],
  "support": {
  	"email" : "itsupport@comech.co.uk",
	"source" : "https://github.com/comech-metrology/trp-client",
	"docs" : "https://docs.trackrecordpro.co.uk",
	"issues" : "https://github.com/comech-metrology/trp-client/issues"
  },
  "suggest": {
  	"monolog/monolog" : "Allows logging of diagnostic information"
  },
  "autoload": {
    "psr-4": {
      "CoMech\\TRP\\": "src/"
    }
  },
  "require": {
    "monolog/monolog": "^1.23",
    "ext-curl" : "*",
    "ext-json" : "*",
    "php" : "^5.3 || ^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  }
}
